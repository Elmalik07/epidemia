{% extends 'base.html.twig' %}

{% block title %}Hello PaysController!{% endblock %}

{% block body %}
     <!-- Content Row -->

    <div class="row">

    <!-- Pie Chart -->
    <div class="col-xl-12 col-lg-5">
        <div class="card shadow mb-4">
            <!-- Card Header - Dropdown -->
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
            <h6 class="m-0 font-weight-bold text-primary">Ajout - Pays</h6>
          
            </div>
            <!-- Card Body -->
                <div class="card-body">
                    <form action="{{path('addPays')}}" method="post">
                        <div class="row">
                            <div class="form-group col-md-6">
                                <label class="control-label" for="nom">Nom :</label>
                                <input class="form-control" type="text" name="nom" id="nom" >
                            </div>
                        </div>
                        <div class="form-group col-xl-6">
                            <input class="btn btn-success" type="submit" name="envoyer" id="envoyer" value="Valider" />
                            <input class="btn btn-warning" type="reset" name="annuler" id="annuler" value="Annuler"/>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
